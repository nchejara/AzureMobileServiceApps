<Page
    x:Class="WhereTheFriend.MainPage"
    IsTabStop="false"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WhereTheFriend"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:live="using:Microsoft.Live.Controls">


    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Width="519">
            <TextBlock Text="Application URL" Margin="15,15,0,0" FontSize="12" FontWeight="Bold"></TextBlock>
            <TextBox x:Name="txtApplicationURL" Margin="15,5,0,0" Width="500" ></TextBox>
             <TextBlock x:Name="lblMsg" Margin="15,15,0,0"  Foreground="Yellow" FontWeight="Bold"></TextBlock>
            <TextBlock Text="[Note] : Redirect URL generated by code based on the application URL which entered by user!" 
                       Margin="15,15,0,0" Foreground="Yellow" FontWeight="Bold"></TextBlock>
            <TextBlock Height="32" Foreground="White" HorizontalAlignment="Left"  Name="infoTextBlock" VerticalAlignment="Top"  />
            <StackPanel Orientation="Horizontal">
                <live:SignInButton x:Name="btnSignin"   Scopes="wl.signin wl.basic"  SessionChanged="btnSignin_SessionChanged_2" />
                <Button x:Name="btnFaceBookWV" Content="Facebook" Margin="0,5,0,0" Height="42" Click="btnFaceBookWV_Click_1"></Button>
                <Button x:Name="btnGoogle" Content="Google" Margin="0,5,0,0" Height="42" Click="btnGoogle_Click_1"></Button>
                <Button x:Name="btnTwitter" Content="Twitter" Margin="0,5,0,0" Height="42" Click="btnTwitter_Click_1"></Button>
                <Button x:Name="btnMicrosoft" Content="Microsoft" Margin="0,5,0,0" Height="42" Click="btnMicrosoft_Click_1"></Button>
            </StackPanel>
            
            
        </StackPanel>
        
    </Grid>
</Page>
